config {
  type: "assertion",
  schema: "dataform_assertions",
  description: "Validates that badge_count is never negative in dim_users_stats"
}

-- Data Quality Test: Ensure badge counts are valid (non-negative)
-- This assertion will fail if any user has a negative badge count

WITH
    users_stats AS (
        SELECT * FROM ${ref("dim_users_stats")}
    )
SELECT badge_count
FROM users_stats
WHERE badge_count < 0
